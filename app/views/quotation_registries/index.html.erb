<p id="notice"><%= notice %></p>

<!--<h1>Quotation Registries</h1>-->
<center><h1>Registro de Cotizaciones</h1></center>

<table class="table">
  <thead>
    <tr>
      <!--<th>Idquotationregistry</th>-->
      <th>Id</th>
      <th>Date</th>
      <th>Client</th>
      <th>Business</th>
      <th>Product</th>
      <th>Value</th>
      <th>Validity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotation_registries.each do |quotation_registry| %>
      <tr>
        <td><%= quotation_registry.idquotationregistry %></td>
        <td><%= quotation_registry.date %></td>
        <td><%= quotation_registry.nameclient %></td>
        <td><%= quotation_registry.business %></td>
        <td><%= quotation_registry.product %></td>
        <td><%= quotation_registry.value %></td>
        <td><%= quotation_registry.validity %></td>
        <td class="btn btn-success"><%= link_to 'Show', quotation_registry %></td>
        <td class="btn btn-info"><%= link_to 'Edit', edit_quotation_registry_path(quotation_registry) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', quotation_registry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td class="btn btn-basic"><%= link_to 'PDF', quotation_registry_path(quotation_registry, format: :pdf) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-primary"><%= link_to 'New Quotation', new_quotation_registry_path %></button>



