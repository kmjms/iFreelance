<% content_for :subtitulo do %>
  Crear Tipo Proyecto
<% end %>

<div class="col-md-6 well">
  <%= form_for(@type_project) do |f| %>

  <% if @type_project.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al crear el Tipo Proyecto!</center></h2>

      <ul>
      <% @type_project.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :name_type, class: "control-label" %>
    <%= f.text_field :name_type, class: "form-control" %>


    <br><br>

    <%= button_tag( :class => "btn btn-success") do %>
      <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to type_projects_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>


  <% end %>
</div>
