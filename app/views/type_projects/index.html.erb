<% content_for :subtitulo do %>
  Tipo Proyecto
<% end %>
<div class="col-md-6">
  <%= link_to new_type_project_path, class:"btn btn-success" do%>
    <i class="glyphicon glyphicon-plus"></i> Crear Tipo Proyecto
  <% end %><br><br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @type_projects.each do |type_project| %>
        <tr>
          <td><%= type_project.name_type %></td>
          <td>
            <%= link_to edit_type_project_path(type_project), class: "btn btn-primary" do%>
              <i class="glyphicon glyphicon-edit"></i> Editar
            <% end %>
          </td>
          <td>
            <%= link_to type_project_path(type_project), class: "btn btn-primary" do %>
              <i class="glyphicon glyphicon-eye-open"></i> Detalles
            <% end %>
          </td>
          <td>
              <%= link_to type_project_path(type_project), class: "btn btn-danger", method: :delete,data: { confirm: 'Estas seguro de eliminar?' } do %>
                <i class="glyphicon glyphicon-trash"></i> Borrar
              <% end %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
