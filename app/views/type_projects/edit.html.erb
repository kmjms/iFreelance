<% content_for :subtitulo do %>
  Editar Tipo Proyecto
<% end %>

<div class="col-md-6 well">
  <%= form_for :client, url: type_proyect_path(@type_proyect), method: :patch do |f| %>

  <% if @type_proyect.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al actualizar!</center></h2>

      <ul>
      <% @type_proyect.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name_type, class: "control-label" %>
   <%= f.text_field :name_type, class: "form-control" %>


 <br>
    <%= button_tag( :class => "btn btn-success") do %>
     <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to type_proyect_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>
  <% end %>
</div>
