<% content_for :subtitulo do %>
  Clientes
<% end %>

<%= link_to new_client_path, class: "btn btn-success"  do%>
  <i class="glyphicon glyphicon-plus"></i> Crear Cliente
<% end %>

<br>
<br>
<table class="table table-striped">
  <thead>
    <th>Nombre</th>
    <th>Correo</th>
    <th>Telefono</th>
    <th>Pago Total</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td> <%= client.name %> </td>
        <td> <%= client.email %> </td>
        <td> <%= client.phone %> </td>
        <td> <%= client.total_payment %> </td>
        <td>

          <%= link_to edit_client_path(client), class: "btn btn-primary" do%>
            <i class="glyphicon glyphicon-edit"></i> Editar
          <% end %>
        </td>
        <td>
          <%= link_to client_path(client), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Detalles
          <% end %>
        </td>
        <td>
            <%= link_to client_path(client), class: "btn btn-danger", method: :delete,data: { confirm: 'Estas seguro de eliminar?' } do %>
              <i class="glyphicon glyphicon-trash"></i> Borrar
            <% end %>
        </td>

      </tr>

    <% end %>

  </tbody>
</table>
 
<%= will_paginate @clients %>
