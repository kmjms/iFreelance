<% content_for :subtitulo do %>
  Editar Gasto
<% end %>

<div class="col-md-6 well">
  <%= form_for :expense, url: expense_path(@expense), method: :patch do |f| %>

  <% if @expense.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al actualizar!</center></h2>

      <ul>
      <% @expense.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :quantity, class: "control-label" %>
  <%= f.text_field :quantity, class: "form-control" %>

  <%= f.label :process, class: "control-label" %>
  <%= f.text_field :process, class: "form-control" %>

  <%= f.label :date_expenses, class: "control-label" %>
  <%= f.text_field :date_expenses, class: "form-control" %>

  <%= f.label :category, class: "control-label" %>
  <%= f.text_field :category, class: "form-control" %>

  <%= f.label :state, class: "control-label" %>
  <%= f.text_field :state, class: "form-control" %>

  <%= f.label :vinculation, class: "control-label" %>
  <%= f.text_field :vinculation, class: "form-control" %>
 <br>
    <%= button_tag( :class => "btn btn-success") do %>
     <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to expense_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>
  <% end %>
</div>
