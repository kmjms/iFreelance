<% content_for :subtitulo do %>
  Editar Proyecto
<% end %>

<div class="col-md-6 well">
  <%= form_for :project, url: project_path(@project), method: :patch do |f| %>

  <% if @project.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al actualizar!</center></h2>

      <ul>
      <% @project.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description, class: "control-label" %>
  <%= f.text_field :description, class: "form-control" %>

  

  <%= f.label :star_date, class: "control-label" %>
  <%= f.text_field :start_date, class: "form-control" %>

  <%= f.label :end_date, class: "control-label" %>
  <%= f.text_field :end_date, class: "form-control" %>

  <%= f.label :freelance_id, class: "control-label" %>
  <%= f.collection_select(:freelance_id, @freelances, :id, :name, prompt: "Seleccione un tipo") %>

  <%= f.label :client_id, class: "control-label" %>
  <%= f.collection_select(:client_id, @clients, :id, :name, prompt: "Seleccione un tipo") %>

  <%= f.label :state_project_id, class: "control-label" %>
   <%= f.collection_select(:state_project_id, @states_project, :id, :name, prompt: "Seleccione un tipo") %>

  

  <%= f.label :price, class: "control-label" %>
  <%= f.text_field :price, class: "form-control" %>

  <%= f.label :progress, class: "control-label" %>
  <%= f.text_field :progress, class: "form-control" %>
 <br>
    <%= button_tag( :class => "btn btn-success") do %>
     <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to project_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>
  <% end %>
</div>
