<% content_for :subtitulo do %>
  Editar Factura
<% end %>

<div class="col-md-6 well">
  <%= form_for :invoice, url: invoice_path(@invoice), method: :patch do |f| %>

  <% if @invoice.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al actualizar!</center></h2>

      <ul>
      <% @invoice.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :price, class: "control-label" %>
  <%= f.text_field :price, class: "form-control" %>

  <%= f.label :date_invoice, class: "control-label" %>
  <%= f.text_field :date_invoice, class: "form-control" %>

  <%= f.label :end_date, class: "control-label" %>
  <%= f.text_field :end_date, class: "form-control" %>

  <%= f.label :name_client, class: "control-label" %>
  <%= f.text_field :name_client, class: "form-control" %>

  <%= f.label :total_value, class: "control-label" %>
  <%= f.text_field :total_value, class: "form-control" %>

  <%= f.label :state, class: "control-label" %>
  <%= f.text_field :state, class: "form-control" %>
 <br>
    <%= button_tag( :class => "btn btn-success") do %>
     <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to client_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>
  <% end %>
</div>
