<% content_for :subtitulo do %>
  Página de Inicio <small>- Resumen del IFreelance</small>
<% end %>

<div class="col-lg-3 col-md-6">
  <div class="panel panel-green">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-3">
          <i class="glyphicon glyphicon-paperclip glyphicon5x"></i>
        </div>
        <div class="col-xs-9 text-right">
          <div class="huge"> <%= @articulos_disponibles %> </div>
          <div>Articulos en Stock</div>
        </div>
      </div>
    </div>
    <a href="#">
      <div class="panel-footer">
        <span class="pull-left">Ver Todos</span>
        <span class="pull-right"><i class="glyphicon glyphicon-circle-arrow-right"></i></span>
        <div class="clearfix"></div>
      </div>
    </a>
  </div>
</div>

