<% content_for :subtitulo do %>
  Freelances
<% end %>

<%= link_to new_freelance_path, class: "btn btn-success"  do%>
  <i class="glyphicon glyphicon-plus"></i> Crear Freelance
<% end %>

<br>
<br>
<table class="table table-striped">
  <thead>
    <th>Nombre</th>
    <th>Correo</th>
    <th>Cantidad Total</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @freelances.each do |freelance| %>
      <tr>
        <td> <%= freelance.name %> </td>
        <td> <%= freelance.email %> </td>
        <td> <%= freelance.total_amount %> </td>
        <td>

          <%= link_to edit_freelance_path(freelance), class: "btn btn-primary" do%>
            <i class="glyphicon glyphicon-edit"></i> Editar
          <% end %>
        </td>
        <td>
          <%= link_to freelance_path(freelance), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Detalle
          <% end %>
        </td>
        <td>
            <%= link_to freelance_path(freelance), class: "btn btn-danger", method: :delete,data: { confirm: 'Estas seguro de eliminar?' } do %>
              <i class="glyphicon glyphicon-trash"></i> Borrar
            <% end %>
        </td>

      </tr>

    <% end %>

  </tbody>
</table>
<%= will_paginate @freelances %>
