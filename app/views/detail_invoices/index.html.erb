<p id="notice"><%= notice %></p>

<h1>Detail Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Name project</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detail_invoices.each do |detail_invoice| %>
      <tr>
        <td><%= detail_invoice.name_project %></td>
        <td><%= detail_invoice.quantity %></td>
        <td><%= detail_invoice.description %></td>
        <td><%= detail_invoice.value %></td>
        <td><%= link_to 'Show', detail_invoice %></td>
        <td><%= link_to 'Edit', edit_detail_invoice_path(detail_invoice) %></td>
        <td><%= link_to 'Destroy', detail_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

