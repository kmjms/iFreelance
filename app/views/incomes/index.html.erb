<% content_for :subtitulo do %>
  Ingresos
<% end %>

<%= link_to new_income_path, class: "btn btn-success"  do%>
  <i class="glyphicon glyphicon-plus"></i> Crear Ingreso
<% end %>

<br>
<br>
<table class="table table-striped">
  <thead>
    <th>Descripcion</th>
    <th>Nombre Proyecto</th>
    <th>Precio</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        
        <td> <%= income.description %> </td>
        
        <td> <%= Project.find(income.project_id).name %> </td>
        <td> <%= income.price %> </td>
        <td>

          <%= link_to edit_income_path(income), class: "btn btn-primary" do%>
            <i class="glyphicon glyphicon-edit"></i> Editar
          <% end %>
        </td>
        <td>
          <%= link_to income_path(income), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Detalles
          <% end %>
        </td>
        <td>
            <%= link_to income_path(income), class: "btn btn-danger", method: :delete,data: { confirm: 'Estas seguro de eliminar?' } do %>
              <i class="glyphicon glyphicon-trash"></i> Borrar
            <% end %>
        </td>

      </tr>

    <% end %>

  </tbody>
</table>
<%= will_paginate @incomes %>
