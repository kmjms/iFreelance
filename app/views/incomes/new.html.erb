<% content_for :subtitulo do %>
  Crear Ingreso
<% end %>

<div class="col-md-6 well">
  <%= form_for(@income) do |f| %>

  <% if @income.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al crear el Ingreso!</center></h2>

      <ul>
      <% @income.errors.each_with_index do |msg| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 

   <%= f.label :project_id, class: "control-label" %>
  <%= f.collection_select(:project_id, @projects, :id, :name, prompt: "Seleccione un tipo") %>


  <%= f.label :description, class: "control-label" %>
   <%= f.text_field :description, class: "form-control" %>

   <%= f.label :price, class: "control-label" %>
   <%= f.number_field :price, class: "form-control" %>

    <br><br>

    <%= button_tag( :class => "btn btn-success") do %>
      <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
    <% end %>
    <%= link_to incomes_path, class:"btn btn-primary" do%>
    <i class="glyphicon glyphicon-repeat"></i> Regresar
    <% end %>


  <% end %>
</div>
